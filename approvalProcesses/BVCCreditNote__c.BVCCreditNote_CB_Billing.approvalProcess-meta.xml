<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>false</allowRecall>
    <allowedSubmitters>
        <type>creator</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Account__c</field>
        <field>BVCInvoice__c</field>
        <field>Status__c</field>
        <field>Subtotal__c</field>
        <field>Reason_for_Credit_Note__c</field>
        <field>Internal_Comments__c</field>
        <field>Remark__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>hitesh@bvcgroup.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>nishant.gadade@bvcgroup.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>sanket.pisal@bvclogistics.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <booleanFilter>1 AND 2 AND 3</booleanFilter>
            <criteriaItems>
                <field>BVCCreditNote__c.Approval_reason__c</field>
                <operation>notEqual</operation>
                <value>Balance Reduction in ACR</value>
            </criteriaItems>
            <criteriaItems>
                <field>BVCCreditNote__c.Approval_reason__c</field>
                <operation>notEqual</operation>
                <value>Invoice Date Change</value>
            </criteriaItems>
            <criteriaItems>
                <field>BVCCreditNote__c.Approval_reason__c</field>
                <operation>notEqual</operation>
                <value>Billing Address Change</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>ApproveRecord</ifCriteriaNotMet>
        <label>Approver</label>
        <name>Approver</name>
    </approvalStep>
    <emailTemplate>unfiled$public/BVCCredit_Note_Approval_Template</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <booleanFilter>(1 OR 2 OR 3)</booleanFilter>
        <criteriaItems>
            <field>BVCCreditNote__c.RecordType</field>
            <operation>equals</operation>
            <value>Tax Credit Note</value>
        </criteriaItems>
        <criteriaItems>
            <field>BVCCreditNote__c.RecordType</field>
            <operation>equals</operation>
            <value>BOS Credit Note</value>
        </criteriaItems>
        <criteriaItems>
            <field>BVCCreditNote__c.RecordType</field>
            <operation>equals</operation>
            <value>Commercial Credit Note</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>BVC_CN_Approval_Response_Alert</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Update_BVC_Credit_Note_Date</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_BVCCreditNote_Approval_Status</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>BVC_Credit_Note_Status_Changed_cancelled</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>BVCCreditNote_Approval_Response_Alert</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Rejection_Action_BVC_Credit_Note</name>
