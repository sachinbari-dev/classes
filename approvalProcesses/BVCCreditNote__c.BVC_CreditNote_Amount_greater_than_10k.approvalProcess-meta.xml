<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>false</allowRecall>
    <allowedSubmitters>
        <type>creator</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Account__c</field>
        <field>BVCInvoice__c</field>
        <field>Subtotal__c</field>
        <field>Reason_for_Credit_Note__c</field>
        <field>Internal_Comments__c</field>
        <field>Remark__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>samir.shigwan@bvclogistics.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Approver 1</label>
        <name>Approver_1</name>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>krishnanand.bastikar@bvcbrinks.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Approver 2</label>
        <name>Approver_2</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <emailTemplate>unfiled$public/BVC_Credit_Note_Approval_Template</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>BVCCreditNote__c.Subtotal__c</field>
            <operation>greaterThan</operation>
            <value>&quot;INR 10,000&quot;</value>
        </criteriaItems>
        <criteriaItems>
            <field>BVCCreditNote__c.Send_for_approvall__c</field>
            <operation>equals</operation>
            <value>True</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Credit_Note_Approval_Response_Alert</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Update_Credit_Note_Date</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_CreditNote_Approval_Status</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>BVC_Credit_Note_Approval_Response_Alert</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Credit_Note_Status_Changed_to_cancelled</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Rejection_Action_Credit_Note</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <label>BVC CreditNote Amount greater than 10k</label>
    <processOrder>1</processOrder>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
