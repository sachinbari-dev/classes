<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>false</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>Quote_Approval_for_Bath_and_eSHIP</name>
                <type>queue</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Step 1</label>
        <name>Step_1</name>
    </approvalStep>
    <emailTemplate>unfiled$public/Approve_or_Reject_BVC_Quote</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>BVCQuote__c.Tariff_Plan__c</field>
            <operation>equals</operation>
            <value>Custom</value>
        </criteriaItems>
        <criteriaItems>
            <field>BVCQuote__c.BVC_Service__c</field>
            <operation>equals</operation>
            <value>BATH,eSHIP</value>
        </criteriaItems>
        <criteriaItems>
            <field>BVCQuote__c.Is_Shipment__c</field>
            <operation>equals</operation>
            <value>True</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Approved</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_approval_stage_to_approve</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>update_customizeds</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Reject</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>update_approval_stage_to_reject</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>update_customized2</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>In_review</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>update_approval_stage</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Custom Tarrif</label>
    <processOrder>2</processOrder>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
